    <tr {% for s in student %}>
        <td>{{ s.id }}</td>
        <td>{{ s.classroom.name }}</td>
        <td>{{ s.nsc }}</td>
        <td>{{ s.email }}</td>
        <td><a href="{{ path('d',{'id':s.id}) }}">Delete</a></td>
        <td><a href="{{ path('u',{'id':s.id}) }}">Update</a></td>



    </tr{% endfor %}>
